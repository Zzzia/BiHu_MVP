<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1px">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/answerItem_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/username" />

        <TextView
            android:id="@+id/answerItem_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/answerItem_username"
            android:minHeight="20dp"
            android:textSize="18sp"
            android:text="content" />

        <TextView
            android:id="@+id/answerItem_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/answerItem_accept"
            android:text="2014/2/24" />

        <TextView
            android:id="@+id/answerItem_acceptCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/answerItem_accept"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:text="(3)" />

        <ImageView
            android:id="@+id/answerItem_accept"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/answerItem_content"
            android:layout_toLeftOf="@id/answerItem_acceptCount"
            android:layout_toStartOf="@id/answerItem_acceptCount"
            android:src="@drawable/good" />

    </RelativeLayout>
</android.support.v7.widget.CardView>